#!/bin/bash -eu

CACHE_KEY=$1

if [ -z "$CACHE_BUCKET_NAME" ]; then
	echo "⛔Unable to save file to cache – no \$CACHE_BUCKET_NAME is set"
	exit 0
fi

if aws s3api head-object --bucket "$CACHE_BUCKET_NAME" --key "$CACHE_KEY" > /dev/null 2>&1; then
	echo "Restoring cache entry $CACHE_KEY"

	echo "	Downloading"
	# If the bucket has transfer acceleration enabled, use it!
	ACCELERATION_STATUS=$(aws s3api get-bucket-accelerate-configuration --bucket $S3_BUCKET_NAME | jq '.Status' -r || true)

	if [ "$ACCELERATION_STATUS" = "Enabled" ]; then
		echo "Downloading with transfer acceleration"
		aws s3 cp "s3://$CACHE_BUCKET_NAME/$CACHE_KEY" "$CACHE_KEY" --quiet --endpoint-url https://s3-accelerate.amazonaws.com
	else
		aws s3 cp "s3://$CACHE_BUCKET_NAME/$CACHE_KEY" "$CACHE_KEY" --quiet
	fi

	echo "	Decompressing"
	tar -xf "$CACHE_KEY"

	echo "	Cleaning Up"
	rm "$CACHE_KEY"
else
	echo "No cache entry found for '$CACHE_KEY'"
fi
